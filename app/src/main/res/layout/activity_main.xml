<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="kode Minimarket" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/edt_kodeminimarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kode MiniMarket" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Mini Market" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/edt_namaminimarket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama MiniMarket" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Kategori" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=":" />
        <EditText
            android:id="@+id/edtkategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori" />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:id="@+id/btn_insertdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btntampildata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampil Data" />
        <Button
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:visibility="gone" />
        <Button
            android:layout_weight="1"
            android:id="@+id/btnhapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
